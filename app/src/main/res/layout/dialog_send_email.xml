<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To:"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />

    <EditText
        android:id="@+id/emailTextEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:layout_toRightOf="@id/emailTextView"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/subjectTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject:"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/emailTextView"
        />

    <EditText
        android:id="@+id/subjectTextEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject"
        android:inputType="text"
        android:layout_toRightOf="@id/subjectTextView"
        android:layout_below="@id/emailTextEdit"/>

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Message:"
        android:layout_below="@id/subjectTextView"
        />


    <EditText
        android:id="@+id/messageTextEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/messageTextView"
        android:layout_margin="10dp"
        android:gravity="top"
        android:hint="What would you like to say?"
        android:inputType="text" />



</RelativeLayout>